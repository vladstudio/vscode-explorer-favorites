{
  "name": "vscode-explorer-favorites",
  "displayName": "VSCode Explorer Favorites",
  "description": "Add files and folders to favorites in Explorer sidebar",
  "version": "0.0.1",
  "engines": { "vscode": "^1.74.0" },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "favorites",
          "name": "Favorites",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "favorites.add",
        "title": "Add to Favorites"
      },
      {
        "command": "favorites.remove",
        "title": "Remove from Favorites",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "favorites.add",
          "group": "favorites"
        }
      ],
      "view/item/context": [
        {
          "command": "favorites.remove",
          "when": "view == favorites",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}