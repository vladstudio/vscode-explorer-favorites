{
  "name": "vscode-explorer-favorites",
  "displayName": "Explorer Favorites",
  "description": "Add files and folders to favorites for quick access in the Explorer sidebar",
  "version": "0.0.7",
  "publisher": "vladstudio",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "favorites",
    "explorer",
    "bookmarks",
    "quick access",
    "sidebar"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladstudio/vscode-explorer-favorites.git"
  },
  "homepage": "https://github.com/vladstudio/vscode-explorer-favorites",
  "bugs": {
    "url": "https://github.com/vladstudio/vscode-explorer-favorites/issues"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "favorites",
          "name": "Favorites",
          "when": "true",
          "icon": "$(star-full)"
        }
      ]
    },
    "commands": [
      {
        "command": "favorites.add",
        "title": "Add to Favorites"
      },
      {
        "command": "favorites.remove",
        "title": "Remove from Favorites",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "favorites.add",
          "group": "favorites"
        }
      ],
      "view/item/context": [
        {
          "command": "favorites.remove",
          "when": "view == favorites",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}
